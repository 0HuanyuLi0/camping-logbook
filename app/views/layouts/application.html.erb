<!DOCTYPE html>
<html>
  <head>
    <title>Camping Logbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <h1>Camping Logbook</h1>
      <nav>

      <% if @current_user.present? %>
        Welcome, <%= @current_user.name %>
        |
        <%= link_to "Logout", login_path,method:"delete"  %>
        |
        <% if @current_user.isAdmin %>
        <%= link_to "All Users", users_path %>
        <% end %>
      <% else %>
        <%= link_to "Login", login_path  %>
        |
        <%= link_to "Sign Up", new_user_path %>
      <% end %>
      <br>

      <%= link_to "Home", root_path %>
      |
      <%= link_to "All Camping sites", sites_path %>
      |
      <%= link_to "Add Camping sites", new_site_path %>
      |
      <%= link_to "My Lists", lists_path %>
      
      </nav>
      <hr>
    </header>
    
    <main>
      <%= yield %>
    </main>

    <footer>
      <hr>
      &copy; Camping Fans Productions 2022
    </footer>

  </body>
</html>
