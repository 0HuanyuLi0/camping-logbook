

<% if @list.stories.present? %>
   <hr>
    <h4>Your Trip Story</h4>

    <ul>
        <% @list.stories.each do |story| %>
            <li>
            <em>Title:</em>
            <%= story.title %>
            <em>
                 <span class="material-symbols-outlined filled">calendar_month</span><%= story.updated_at.strftime("%d-%m-%y") %>
                </em>
            <br>
            <em>Content:</em>
            <%= simple_format(story.content) %>
            
            <%= link_to "edit", edit_story_path(story.id), class:"material-symbols-outlined" %>
            |
            <%= link_to "delete", story_path(story.id),method:"delete", class:"material-symbols-outlined" %>
            <br><br>
            </li>
        <% end %>
    </ul>
<% end %>

<br>
<hr>

<input type="button" value="Add Your Trip Story" class="show_form" id="list_story_form">

<div id="show_list_story_form" style="display:none">
<%= form_with model:@story, local:true, class:"container" do |f| %>

<h4>Add New Story</h4>
    <%= hidden_field_tag "list_id", @list.id %>
    <div>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
    <br><br>
    </div>
    
    <div>
    <%= f.label :content %>
    <br>
    <%= f.text_area :content %>
    <br><br>
    </div>
    

    <%= f.submit class:"sub"%>

<% end %>

</div>
