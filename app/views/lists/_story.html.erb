

<% if @list.stories.present? %>
   <hr>
    <h3>Your Trip Story</h3>

    <ul>
        <% @list.stories.each do |story| %>
            <li>
            <strong>Title:</strong>
            <%= story.title %>
            <br>
            <strong>Content:</strong>
            <%= story.content %>
            <br>
            <%= link_to "Edit", edit_story_path(story.id) %>
            |
            <%= link_to "Delete", story_path(story.id),method:"delete" %>
            <br><br>
            </li>
        <% end %>
    </ul>
 
<% end %>
<hr>
<h4>Add New Story</h4>
<%= form_with model:@story, local:true do |f| %>

    <%= hidden_field_tag "list_id", @list.id %>

    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
    <br><br>

    <%= f.label :content %>
    <br>
    <%= f.text_area :content %>
    <br><br>

    <%= f.submit %>

<% end %>