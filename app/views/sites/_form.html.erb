

<div class="container">

    <%= form_with model:@site, local: true, html:{multipart:true}, class:"new_site_form" do |f| %>

<div class="site_form">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name, :required=>true %>
    <br><br>
</div>

<div class="site_form">
    <%= f.label :location %>
    <br>
    <%= f.text_field :location %>
    <br><br>
</div>

<div class="site_form">
    <%= f.label :coordinates %>
    <br>
    <%= f.text_field :coordinates %>
    <br><br>
</div>

<div class="site_form">
    <%= f.label :price %>
    <br>
    <%= f.number_field :price %>
    <br><br>
</div>

<div class="site_form">
    <%= f.label :link %>
    <br>
    <%= f.text_field :link %>
    <br><br>
</div>

<div class="site_form">
    <%= f.label :powered %>
    <br>
    <%= f.select :powered, [["Yes",true],["No",false]],selected:false %>
    <br><br>
</div>

<div class="site_form">
    <%= f.label :pets, "Pets Allowed" %>
    <br>
    <%= f.select :pets, [["Yes",true],["No",false]],selected:false %>
    <br><br>
</div>

<div class="site_form">
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
    <br><br>
</div>

<% if @site.photos.present? %>
    <ul class="list">
        <% @site.photos.each do |photo| %>
        <% if photo.isPublic %>
            <li>
                <%= cl_image_tag(photo.link, :width => 600, :class => "list_photo") %>
                <br>
                <%= link_to "delete", photo_path(photo.id), method:"delete",class:"material-symbols-outlined" %>
                <br>
            </li>
        <% end %>
   <% end %>
    </ul>
<% end %>


<br>



<button type="button" id="upload">Select Photos</button>


<br><br>


<div id="files"></div>
<br>


<%= f.submit class:"sub" %>



<% end %>

</div>



