






<input type="button" value="Share Your Story at <%= @site.name %>" class="show_form" id="review_form">

<div id="show_review_form" style="display:none">
    <%= form_with model:@reviews, local: true, class:"container" do |f| %>

        <%= hidden_field_tag "site_id", @site.id %>
        <div>
            <%= f.label :score %>
            <br>
            <%= f.number_field :score , in: 0.5..5, step:0.5, disabled: !@current_user.present?, required:true %>
        </div>
        
       
       <br>
        <div>
            <%= f.label :comment %>
            <br>
            <%= f.text_area :comment,disabled: !@current_user.present?, required:true %>
            <br>
        </div>
        

        <%= f.submit "Submit", disabled: !@current_user.present?, class:"sub"  %>
    <% end %>
</div>


