

<% if @site.stories.present? %>
    <hr>
    <h3>Your Trip Story</h3>

    <ul>
        <% @site.stories.each do |story| %>
            <% if story.user_id == @current_user.id%>
            <li>
                <strong>Title:</strong>
                <%= story.title %>
                <br>
                <strong>Content:</strong>
                <%= story.content %>
                <br>
                <%= link_to "Edit", edit_story_path(story.id) %>
                |
                <%= link_to "Delete", story_path(story.id),method:"delete" %>
                <br><br>
            </li>
            <% end %>
        <% end %>
    </ul>
<% end %>

<br>
<hr>
 <input type="button" value="Add Private Story" class="show_form" id="story_form">

 <div id="show_story_form" style="display:none">
    <hr>
    <h4>Add New Story</h4>
    <%= form_with model:@story, local:true do |f| %>

        <%= hidden_field_tag "site_id", @site.id %>

        <%= f.label :title %>
        <br>
        <%= f.text_field :title %>
        <br><br>

        <%= f.label :content %>
        <br>
        <%= f.text_area :content %>
        <br><br>

        <%= f.submit %>

    <% end %>
 
 </div>
