

<h2>Create Account</h2>

<% if @user.errors.any? %>
    <strong style="color:red" >Please correct the following errors:</strong>
    <ul>
        <% @user.errors.full_messages.each do |e| %>
            <li>
                <%= e %>
            </li>
        <% end %>
    </ul>
<% end %>

<%= form_with model:@user, local:true, class:"container" do |f| %>
    <div>
        <%= f.label :name %>
        <br>
        <%= f.text_field :name %>
        <br><br>
    </div>
    
    <div>
        <%= f.label :email %>
        <br>
        <%= f.email_field :email %>
        <br><br>
    </div>
    
    <div>
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
        <br><br>
    </div>

    <div>
        <%= f.label :password_confirmation %>
        <br>
        <%= f.password_field :password_confirmation %>
        <br><br>
    </div>

    <%= f.submit %>

<% end %>